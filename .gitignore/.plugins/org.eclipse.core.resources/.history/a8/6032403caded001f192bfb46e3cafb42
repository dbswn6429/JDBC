package jdbc.basic;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Scanner;

public class JdbcSelect3 {
	public static void main(String[] args) {
		/*
		 * 테이블은 employees, departments
		 * 
		 * 회원번호를 입력받아서, 이 회원의 이름, 부서아이디, 부서명, 급여
		 * 를 출력하는 join문장을 작성합니다.
		 * 
		 * sqldeveloper에서 먼저 sql을 연습을 하고 복붙.
		 * 
		 */
		
		Scanner sc = new Scanner(System.in);
		System.out.println("회원번호>");
		int mno = sc.nextInt();
		
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String uid = "HR";
		String upw = "HR";
		
		String sql = "select e.first_name || e.last_name as 이름, d.department_name as 부서명, e.department_id as 부서아이디, e.salary as 급여 "
		           + "from employees e "
		           + "inner join departments d on e.department_id = d.department_id "
		           + "where e.employee_id = ?";

		
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			conn = DriverManager.getConnection(url,uid,upw);
			pstmt = conn.prepareStatement(sql);
			pstmt.setInt(1, 123);
			rs = pstmt.executeQuery();
			
			if(rs.next()) {
				String name = rs.getString("이름");
				int dpid = rs.getInt("부서명");
				String dname = rs.getString("부서이름");
				int salary = rs.getInt("급여");
				
				System.out.println(name + " ," + dpid + ", " + dname + ", " + salary );
			}else {
				System.out.println("회원번호가 없습니다");
			}
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				conn.close();
				pstmt.close();
				rs.close();
			}catch (Exception e2) {
			}
		}
		
	}
}
